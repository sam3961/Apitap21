<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rl1"
            android:gravity="center"
            android:layout_height="40dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Remove an item from shopping cart"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlue"
                android:textStyle="bold"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rl2"
            android:layout_below="@+id/rl1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Would you like to ..."
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rl3"
            android:layout_below="@+id/rl2"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="40dp">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:text="Remove Completely"
                android:id="@+id/remove"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlue"
                android:layout_height="wrap_content" />

            <CheckBox
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/remove"/>

            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rl4"
            android:layout_below="@+id/rl3"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="Save for Later"
                    android:id="@+id/remove2"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorBlue"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content"
                   />

            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/rl5"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rl4">

            <LinearLayout
                android:layout_width="100dp"
                android:background="@drawable/rounded_bg_dblue"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"

                    android:text="@string/Submit"/>

            </LinearLayout>
        </RelativeLayout>



    </RelativeLayout>



</RelativeLayout>
