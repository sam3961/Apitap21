<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="12/27/2017 -"
                android:id="@+id/date"
                android:textColor="@color/dark_blue"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="David M"
                android:id="@+id/name"
                android:textColor="@color/dark_blue"
                android:layout_height="wrap_content"/>
            <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:id="@+id/ratingBar"
                android:layout_marginLeft="10dp"
                android:progressTint="@color/pocket_color_4"
                android:rating="5.0"
                android:secondaryProgressTint="@android:color/transparent"
                android:stepSize="0.5"/></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.6"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:id="@+id/comment"
                android:textColor="@color/dark_blue"
                android:text="JavaTpoint (SSS IT Pvt Ltd) provides website development services in affordable cost. We develop websites on WordPress, Core PHP, CakePHP, CodeIgnitor, Open Cart, Servlet-JSP, Struts 2 and Spring technologies."
                android:layout_height="wrap_content"/>

</LinearLayout>
    </LinearLayout>
</RelativeLayout>