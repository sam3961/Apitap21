<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/rootLayout"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:background="@color/colorGrey"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center">

            <TextView
                android:id="@+id/storeName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@drawable/back_round_blue_border"
                android:drawableLeft="@drawable/ic_icon_fav_gray"
                android:drawableTint="@color/colorGreenLogo"
                android:drawablePadding="-0.5dp"
                android:gravity="center"
                android:maxLines="2"
                android:padding="2.5dp"
                android:text="Store Name"
                android:textColor="@color/colorBlue"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:padding="5dp">


            <ImageView
                android:id="@+id/adstoreImg"
                android:layout_width="152dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:src="@drawable/loading" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center">

            <Button
                android:id="@+id/details_store"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@drawable/rounded_bg_dblue"
                android:gravity="center"
                android:padding="3dp"
                android:text="View Info and Policies"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="10sp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_four"
        android:paddingBottom="@dimen/dp_four"
        android:layout_margin="5dp"
        android:background="@color/colorBlue"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/back_ll"
            android:layout_width="0dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_height="match_parent"
            android:layout_weight=".2">

            <ImageView
                android:layout_width="wrap_content"
                android:padding="@dimen/dp_two"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:src="@drawable/back_green" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/sortby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_weight=".2"
            android:gravity="center">


            <TextView
                style="@android:style/TextAppearance.Small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:gravity="end|center"
                android:text="Sort"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/sort_white" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:numColumns="3"
            android:background="@color/colorWhite" />

        <com.github.rahatarmanahmed.cpv.CircularProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pocket"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true" />

    </FrameLayout>
</LinearLayout>