<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_icon_back_arrow" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Card"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="15dp"
        android:text="Nick Name"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="#ffffff"
        android:textColorHint="#A9A9A9"
        android:textColor="#696969"
        android:id="@+id/nick_name"
        android:layout_marginLeft="7dp"
        android:singleLine="true"
        android:hint="Nick Name"
        android:padding="7dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:text="Select Card"
            android:textColor="#000000" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:textColor="#696969"
            android:background="@drawable/back_round"
            android:drawableRight="@drawable/ic_down_arrow"
            android:spinnerMode="dropdown"
            android:dropDownVerticalOffset="40dp"
            android:id="@+id/spinner_type"
            android:layout_marginLeft="7dp"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:text="Card Holder Name"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="#ffffff"
        android:singleLine="true"
        android:textColorHint="#A9A9A9"
        android:textColor="#696969"
        android:id="@+id/card_holdername"
        android:hint="Card Holder Name"
        android:layout_marginLeft="7dp"
        android:padding="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:text="Card Number"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:background="#ffffff"
        android:singleLine="true"
        android:inputType="phone"
        android:id="@+id/card_number"
        android:textColorHint="#A9A9A9"
        android:textColor="#696969"
        android:hint="Enter Card Number"
        android:padding="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="Exp. Date"
        android:layout_marginTop="5dp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="#ffffff"
        android:textColorHint="#A9A9A9"
        android:id="@+id/exp_date"
        android:textColor="#696969"
        android:layout_marginLeft="7dp"
        android:singleLine="true"
        android:hint="Enter Exp. Date"
        android:padding="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:text="CVC Code"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="#ffffff"
        android:singleLine="true"
        android:textColorHint="#A9A9A9"
        android:inputType="phone"
        android:textColor="#696969"
        android:id="@+id/cvc"
        android:layout_marginLeft="7dp"
        android:hint="Enter CVC"
        android:padding="7dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:text="Address"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/spinners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/back_round"
        android:drawableRight="@drawable/ic_down_arrow"
        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="40dp"
        android:gravity="center_vertical"
        android:text="Select Address"
        android:textColor="#617291"

        android:textSize="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:id="@+id/spinner"
        android:visibility="gone"
        android:layout_marginLeft="7dp"
        android:background="#ffffff"
        android:padding="7dp"></Spinner>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_blue"
        android:paddingLeft="50dp"
        android:id="@+id/submit"
        android:paddingRight="50dp"
        android:text="Submit"
        android:textColor="#ffffff" />
</LinearLayout>
</ScrollView>
</LinearLayout>