<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">


        <LinearLayout
            android:id="@+id/tab_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/homeTab2"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@drawable/rounded_right_blue"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_eight"
                android:paddingEnd="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/tab_one_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_baseline_home_24"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/sear"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:padding="@dimen/_1sdp"
                    android:src="@drawable/ic_icon_search"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_one"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_eight"
                    android:paddingEnd="@dimen/dp_eight"
                    android:text="@string/home"
                    android:textColor="@color/colorGrey1"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="bottom"
                android:background="@color/colorWhite"
                app:tabGravity="center"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabIndicatorHeight="5dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/colorBlue"
                app:tabTextColor="@color/colorWhite" />


        </LinearLayout>


        <FrameLayout
            android:id="@+id/container_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></FrameLayout>

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight=".33"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:id="@+id/storeName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/back_round_blue_border"
                    android:drawableTint="@color/colorGreenLogo"
                    android:drawableLeft="@drawable/ic_icon_fav_gray"
                    android:drawablePadding="-0.5dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="2.5dp"
                    android:text="Store Name Store Name"
                    android:textColor="@color/colorBlue"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/adstoreImg"
                    android:layout_width="152dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:src="@drawable/loading"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".16"
                android:padding="5dp">


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".36"
                android:gravity="center">

                <Button
                    android:id="@+id/details_store"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"

                    android:background="@drawable/rounded_bg_dblue"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="View Storefront"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:background="@color/colorGrey"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".38"
                android:gravity="center"
                android:padding="5dp">


                <TextView
                    android:id="@+id/storeNameTitle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/back_round_blue_border"
                    android:drawableTint="@color/colorGreenLogo"
                    android:drawableLeft="@drawable/ic_icon_fav_gray"
                    android:drawablePadding="-0.5dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="2.5dp"
                    android:text="Store Name Store Name"
                    android:textColor="@color/colorBlue"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/message_store"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:layout_weight=".14"
                android:background="@drawable/back_round_blue_border"
                android:gravity="center"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chat_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="7.5dp"
                android:layout_weight=".38"
                android:background="@drawable/rounded_blue_transparent_"
                android:gravity="center">

                <Spinner
                    android:id="@+id/category_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorBlack"
                    android:gravity="center"
                    android:padding="2.5dp"
                    android:textAlignment="center"></Spinner>


            </LinearLayout>


        </LinearLayout>


        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/pocketa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_set_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:visibility="gone"
            card_view:cardBackgroundColor="@color/colorWhite"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="0.5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp"
                    android:src="@drawable/back_arrow_text" />


                <TextView
                    android:id="@+id/storeReviews"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/tv_back"
                    android:text="Store Reviews: "
                    android:textColor="@color/pocket_color_4" />

                <LinearLayout
                    android:id="@+id/linearLayoutRating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/storeReviews"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="5.0"
                        android:stepSize="0.5" />

                </LinearLayout>


                <TextView
                    android:id="@+id/ratingNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/linearLayoutRating"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/pocket_color_4"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="bottom"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:src="@drawable/ic_icon_share" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/linearLayoutPolicy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Return Policy"
                    android:textColor="@color/colorBlue"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/view_policy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@color/colorBlue" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearLayoutTerms"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Terms and Conditions"
                    android:textColor="@color/colorBlue"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/view_terms"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBlue"
                    android:visibility="invisible" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearLayoutPrivacy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Privacy Policy"
                    android:textColor="@color/colorBlue"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/view_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBlue"
                    android:visibility="invisible" />


            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutReturnPolicy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2sdp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="7dp"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:visibility="gone">

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Return Policy"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/img_main"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/loading"
                    android:visibility="gone" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    style="@style/ScrollBarStyle2"
                    android:scrollbarStyle="outsideOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/storeDetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text=""
                        android:textColor="@color/colorBlack" />
                </androidx.core.widget.NestedScrollView>

                <com.github.rahatarmanahmed.cpv.CircularProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/pocket"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:cpv_animAutostart="true"
                    app:cpv_indeterminate="true" />

            </FrameLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/noAdsll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:background="@color/colorWhite"

            android:visibility="gone"
            app:cardCornerRadius="3dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/noStoreLogo"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/logo"
                android:visibility="visible" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="top|center"
                android:text="No Ads for current store"
                android:textColor="@color/colorBlue" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/linearLayoutTermsRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rls"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="7dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/termstitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="Terms and Conditions"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/termstitle"
                    android:orientation="vertical">

                    <androidx.core.widget.NestedScrollView
                        style="@style/ScrollBarStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbarStyle="outsideOverlay"

                        >

                        <TextView
                            android:id="@+id/termsConditions"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text=""
                            android:textColor="@color/colorBlack" />
                    </androidx.core.widget.NestedScrollView>
                </FrameLayout>

                <com.apitap.model.ViewPagerCustomDuration
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator_default"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:gravity="bottom"
                    android:visibility="gone" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutPrivacyRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="7dp"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.core.widget.NestedScrollView
                        style="@style/ScrollBarStyle2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbarStyle="outsideOverlay"

                        >

                        <TextView
                            android:id="@+id/privacyPolicy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text=""
                            android:textColor="@color/colorBlack" />
                    </androidx.core.widget.NestedScrollView>
                </FrameLayout>

            </RelativeLayout>


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/nolocation"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            android:visibility="gone"
            card_view:cardBackgroundColor="@color/colorWhite"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_round_blue_border"
                    android:gravity="center"
                    android:text="No Locations Found"

                    android:textColor="@color/simple_grey"
                    android:textSize="25dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/locationlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:gravity="bottom"
            android:visibility="gone"
            card_view:cardBackgroundColor="@color/colorWhite"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="7dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="Locations"
                        android:textColor="@color/colorBlue" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4" />


                    <TextView
                        android:id="@+id/showall"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:gravity="end"
                        android:text="Show All"
                        android:textColor="@color/colorBlue" />
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>

