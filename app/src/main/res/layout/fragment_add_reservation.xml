<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@android:color/darker_gray" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:src="@drawable/back_green" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/reservations"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:fillViewport="true"
        android:scrollbarSize="10dp"
        android:scrollbarThumbVertical="@drawable/custom_scroll_style">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Name"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/name_mandatory"
                android:includeFontPadding="false"
                android:inputType="textPersonName"
                android:padding="@dimen/_8sdp"
                android:singleLine="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Date"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/editTextStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_baseline_calendar_month_24"
                android:focusable="false"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/select_date"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_8sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Start Time"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/editTextStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_baseline_access_time_24"
                android:focusable="false"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/start_time"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_8sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="End Time"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/editTextEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_baseline_access_time_24"
                android:focusable="false"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/end_time"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_8sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Number of People"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/editTextNumberOfPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:digits="0123456789"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/number_of_people_mandatory"
                android:includeFontPadding="false"
                android:inputType="number"
                android:padding="@dimen/_8sdp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Dining Method"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:paddingHorizontal="@dimen/_2sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:visibility="gone">


                <Spinner
                    android:id="@+id/spinnerDining"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/dining_method"
                    android:fadeScrollbars="false"
                    android:gravity="center_vertical"
                    android:nestedScrollingEnabled="true"
                    android:popupElevation="6dp"
                    android:scrollIndicators="right"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarFadeDuration="0"
                    android:scrollbarSize="3dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbarThumbVertical="@color/darkBlue"
                    android:scrollbars="vertical"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Location"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:paddingHorizontal="@dimen/_2sdp"
                android:paddingVertical="@dimen/_8sdp">


                <Spinner
                    android:id="@+id/spinnerLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownVerticalOffset="50dp"
                    android:entries="@array/type_of_area"
                    android:fadeScrollbars="false"
                    android:gravity="center_vertical"
                    android:nestedScrollingEnabled="true"
                    android:popupElevation="6dp"
                    android:scrollIndicators="right"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarFadeDuration="0"
                    android:scrollbarSize="3dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbarThumbVertical="@color/darkBlue"
                    android:scrollbars="vertical"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewAreaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Area"
                android:visibility="gone"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:id="@+id/linearLayoutArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:paddingHorizontal="@dimen/_2sdp"
                android:visibility="gone"
                android:paddingVertical="@dimen/_8sdp">


                <Spinner
                    android:id="@+id/spinnerArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownVerticalOffset="50dp"
                    android:entries="@array/type_of_area"
                    android:fadeScrollbars="false"
                    android:gravity="center_vertical"
                    android:nestedScrollingEnabled="true"
                    android:popupElevation="6dp"
                    android:scrollIndicators="right"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarFadeDuration="0"
                    android:scrollbarSize="3dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbarThumbVertical="@color/darkBlue"
                    android:scrollbars="vertical"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Seating"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:paddingHorizontal="@dimen/_2sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:visibility="gone">


                <Spinner
                    android:id="@+id/spinnerTable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownVerticalOffset="50dp"
                    android:entries="@array/type_of_table"
                    android:fadeScrollbars="false"
                    android:gravity="center_vertical"
                    android:nestedScrollingEnabled="true"
                    android:popupElevation="6dp"
                    android:scrollIndicators="right"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarFadeDuration="0"
                    android:scrollbarSize="3dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbarThumbVertical="@color/darkBlue"
                    android:scrollbars="vertical"
                    android:spinnerMode="dropdown" />

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Number of Children"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextNumberOfChildren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:digits="0123456789"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/number_of_children_mandatory"
                android:includeFontPadding="false"
                android:inputType="number"
                android:padding="@dimen/_8sdp"
                android:singleLine="true"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Phone"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:drawableEnd="@drawable/ic_baseline_local_phone_24"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/phone_mandatory"
                android:includeFontPadding="false"
                android:inputType="phone"
                android:padding="@dimen/_8sdp"
                android:singleLine="true"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="e.g. 999 999 99 99 @ext"
                android:textColor="@android:color/black"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Email"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:drawableEnd="@drawable/ic_icon_email"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/email_mandatory"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_8sdp"
                android:singleLine="true"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Second Email"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextSecondEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:drawableEnd="@drawable/ic_icon_email"
                android:fontFamily="@font/rubik_regular"
                android:hint="@string/secondary_email"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_8sdp"
                android:singleLine="true"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Assign"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:paddingHorizontal="@dimen/_2sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:visibility="gone">


                <Spinner
                    android:id="@+id/spinnerAssign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownVerticalOffset="50dp"
                    android:entries="@array/type_of_assign"
                    android:fadeScrollbars="false"
                    android:gravity="center_vertical"
                    android:nestedScrollingEnabled="true"
                    android:popupElevation="6dp"
                    android:scrollIndicators="right"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarFadeDuration="0"
                    android:scrollbarSize="3dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbarThumbVertical="@color/darkBlue"
                    android:scrollbars="vertical"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Promo"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:paddingHorizontal="@dimen/_2sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:visibility="gone">


                <Spinner
                    android:id="@+id/spinnerPromo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownVerticalOffset="50dp"
                    android:entries="@array/type_of_promo"
                    android:fadeScrollbars="false"
                    android:gravity="center_vertical"
                    android:nestedScrollingEnabled="true"
                    android:popupElevation="6dp"
                    android:scrollIndicators="right"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarFadeDuration="0"
                    android:scrollbarSize="3dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbarThumbVertical="@color/darkBlue"
                    android:scrollbars="vertical"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Any Special Requests"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextSpecialRequest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:fontFamily="@font/rubik_regular"
                android:gravity="start|top"
                android:hint="@string/enter_special_request"
                android:includeFontPadding="false"
                android:inputType="text"
                android:padding="@dimen/_8sdp"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Smoking Area Preferred?"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:paddingHorizontal="@dimen/_2sdp"
                android:paddingVertical="@dimen/_8sdp">


                <Spinner
                    android:id="@+id/spinnerSmokingArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownVerticalOffset="50dp"
                    android:entries="@array/type_of_smokin_area"
                    android:fadeScrollbars="false"
                    android:gravity="center_vertical"
                    android:nestedScrollingEnabled="true"
                    android:popupElevation="6dp"
                    android:scrollIndicators="right"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarFadeDuration="0"
                    android:scrollbarSize="3dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbarThumbVertical="@color/darkBlue"
                    android:scrollbars="vertical"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Notes"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/editTextNotes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:fontFamily="@font/rubik_regular"
                android:gravity="start|top"
                android:hint="@string/enter_notes"
                android:includeFontPadding="false"
                android:layout_marginBottom="40dp"
                android:inputType="text"
                android:padding="@dimen/_8sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Customer History"
                android:textColor="@color/tabgrey"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextCustomerHistory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/back_round_blue_border"
                android:fontFamily="@font/rubik_regular"
                android:gravity="start|top"
                android:hint="@string/enter_customer_history"
                android:includeFontPadding="false"
                android:inputType="text"
                android:padding="@dimen/_8sdp"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/checkBoxWheelChairAccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_checkbox"
                    android:button="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:fontFamily="@font/rubik_regular"
                    android:includeFontPadding="false"
                    android:text="@string/wheelchair_access"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/checkBoxChildSeating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_checkbox"
                    android:button="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:fontFamily="@font/rubik_regular"
                    android:includeFontPadding="false"
                    android:text="@string/need_child_seating"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/relativeLayoutSave"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_bg_dblue"
                android:gravity="center"
                android:paddingVertical="@dimen/_4sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_13ssp" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>