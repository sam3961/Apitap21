<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNavBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/linear"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:background="@color/colorGreenLogo">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:layout_height="match_parent"
            android:text="Apitap Menu"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:gravity="center|start"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/close_drawer"
            android:src="@drawable/back_navigation"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear"
        android:background="@color/colorGreenLogo"
        android:id="@+id/linear2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Welcome, Guest"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/textViewUserName"
            android:padding="@dimen/dp_four"
            android:gravity="center|start"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_below="@+id/linear2"
        android:layout_height="match_parent"
        />


</RelativeLayout>