<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    android:fillViewport="true"
    tools:context=".views.fragments.favourite.FragmentFavourite">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey">




        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linfav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear"
            android:layout_marginTop="5dp"
            android:background="@color/colorGrey"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/descriptions"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="6dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtfav"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".4"
                        android:gravity="start"
                        android:text="Favorites"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlue" />

                    <Spinner
                        android:id="@+id/spinner_sort"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:textAlignment="center"></Spinner>


                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/title_ll"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_bg_blue"
                android:focusable="false"
                android:focusableInTouchMode="false">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_weight=".8"
                    android:text="Title"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textSize="14dp"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                        android:id="@+id/title_lin_merchant"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/colorGreenLogo">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:layout_marginStart="5dp"
                        android:gravity="center|start"
                        android:text="Businesses"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textSize="14dp"
                        android:textColor="@color/colorWhite"
                         />

                    <ImageView
                        android:id="@+id/img_Stores"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight=".2"
                        android:src="@drawable/ic_icon_uparrow" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/showallstores"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:text="Show all"
                        android:layout_marginEnd="@dimen/dp_five"
                        android:textColor="@color/colorBlue" />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@color/colorWhite" />


                <LinearLayout
                    android:id="@+id/lin_Ads"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorGreenLogo">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight=".8"
                        android:gravity="center|start"
                        android:text="Ads"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorWhite"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/img_Ads"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight=".2"
                        android:src="@drawable/ic_icon_uparrow" />
                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/ll_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite">


                        <com.apitap.model.ViewPagerCustomDuration
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp" />

                        <me.relex.circleindicator.CircleIndicator
                            android:id="@+id/indicator_default"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:gravity="bottom" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:id="@+id/lin_special"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorGreenLogo">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight=".8"
                        android:gravity="center|start"
                        android:text="Promotions"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorWhite"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/img_Special"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight=".2"
                        android:src="@drawable/ic_icon_uparrow" />

                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/showallspecials"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:text="Show all"
                        android:layout_marginEnd="@dimen/dp_five"
                        android:textColor="@color/colorBlue" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerSpecial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:background="@color/colorWhite" />






                    </RelativeLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/lin_Items"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:visibility="visible"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorGreenLogo">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight=".8"
                        android:gravity="center|start"
                        android:text="Products"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorWhite"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/img_Items"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight=".2"
                        android:src="@drawable/ic_icon_uparrow" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/showallitems"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Show all"
                        android:layout_marginEnd="@dimen/dp_five"
                        android:textColor="@color/colorBlue" />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@color/colorWhite" />


            </LinearLayout>


        </LinearLayout>



        <TextView
            android:id="@+id/textViewNoFav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="No Favourites Yet"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/_25sdp"
            android:gravity="center"
            android:fontFamily="@font/rubik_medium"
            android:visibility="gone" />

    </RelativeLayout>

</ScrollView>
