<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/view_checkin"
    android:background="@android:color/white"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorBlack"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:paddingVertical="@dimen/_8sdp"
        android:orientation="horizontal"
        android:visibility="visible">


        <Button
            android:id="@+id/buttonCheckinHome"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_bg_orange"
            android:gravity="center"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/check_in_from_home"
            android:includeFontPadding="false"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:paddingHorizontal="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_9ssp" />


        <Button
            android:id="@+id/buttonListenLive"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/_16sdp"
            android:background="@drawable/rounded_bg_purple"
            android:gravity="center"
            android:fontFamily="@font/rubik_medium"
            android:includeFontPadding="false"
            android:text="@string/listen_in_live"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_9ssp" />




    </LinearLayout>

</LinearLayout>