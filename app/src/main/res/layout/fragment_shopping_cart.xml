<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGrey"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ll_shopping"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/toolBar_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardElevation="7dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="2dp"
            card_view:cardBackgroundColor="@color/colorWhite"
            card_view:contentPadding="5dp">

            <LinearLayout
                android:layout_width="100dp"
                android:id="@+id/back_ll"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/back_arrow_text" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/shoppingcarts"
                android:id="@+id/titleName"
                android:textColor="@color/colorBlue"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_shopping"
        card_view:cardElevation="7dp"
        android:id="@+id/cardViewNote"
        android:layout_margin="@dimen/dp_four"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:contentPadding="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/shoppingcart_note"
            android:textColor="@color/darkBlue"
            android:padding="@dimen/dp_four"
            android:gravity="center"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/two_four"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:id="@+id/textViewEmptyCart"
        android:visibility="gone"
        android:text="@string/empty_cart"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardViewNote"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp">

    </ListView>


</RelativeLayout>