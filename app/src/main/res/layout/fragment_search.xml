<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollBarStyle"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/mainview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
          >


            <androidx.cardview.widget.CardView
                android:id="@+id/ad_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"

                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_190sdp"
                    android:layout_marginTop="3dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/rls"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/textViewAds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="top"
                            android:text="Ads"
                            android:textColor="@color/colorBlue" />

                        <View
                            android:id="@+id/view"
                            android:layout_below="@+id/textViewAds"
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:background="@color/colorGrey"
                            android:visibility="visible" />

                        <com.apitap.model.ViewPagerCustomDuration
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/view" />

                        <me.relex.circleindicator.CircleIndicator
                            android:id="@+id/indicator_default"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="8dp"
                            android:gravity="bottom" />


                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/no_Ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:visibility="gone"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
              >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="No Ads Found"
                    android:textColor="@color/colorBlue"
                    android:textSize="22dp" />

            </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/noItemll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:visibility="gone"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
             >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="No Product Found"
                    android:textColor="@color/colorBlue"
                    android:textSize="22dp" />

            </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="visible"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="184dp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:text="@string/product_services"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorBlue" />

                    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                        android:id="@+id/list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@color/colorWhite"
                        android:showDividers="none|middle|beginning|end"
                        app:dividerThickness="2dp"
                        app:shimmer_demo_angle="20"
                        app:shimmer_demo_layout="@layout/adapter_items"
                        app:shimmer_demo_layout_manager_type="linear_horizontal" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/noSpecial_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:visibility="gone"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="No Promotions Found"
                    android:textColor="@color/colorBlue"
                    android:textSize="22dp" />

            </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="visible"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:layout_marginLeft="10dp"
                        android:text="Promotions"
                        android:textColor="@color/colorBlue" />

                    <HorizontalScrollView
                        android:id="@+id/scroll_view_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <com.linearlistview.LinearListView
                            android:id="@+id/list2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:dividerPadding="2dp"
                            android:orientation="horizontal"
                            android:showDividers="none|middle|beginning|end"
                            app:dividerThickness="2dp" />
                    </HorizontalScrollView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
