<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_3"
        android:layout_marginEnd="@dimen/dp_3"
        android:background="@drawable/rounded_corners_blue_bg"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_margin="@dimen/dp_4"
            android:background="@color/colorBlue"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@string/please_choose_a_type_of_business"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:background="@color/colorWhite"
        card_view:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/adapter_select_business" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:visibility="visible"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_weight=".5"
            android:background="@drawable/rounded_left_corner_grey"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@string/close"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_weight=".5"
            android:background="@drawable/rounded_right_corner_blue"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvClose"
            android:layout_width="0dp"
            android:layout_height="?actionBarSize"
            android:layout_weight=".5"
            android:background="@drawable/rounded_left_corner_grey"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@string/close"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDone"
            android:layout_width="0dp"
            android:layout_height="?actionBarSize"
            android:layout_weight=".5"
            android:background="@drawable/rounded_right_corner_blue"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>


