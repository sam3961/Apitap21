<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/host_list_row">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:layout_marginVertical="@dimen/_6sdp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorGrey1"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:id="@+id/textViewTvName"
                    android:includeFontPadding="false"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="TV 1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_16ssp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp">

                    <TextView
                        android:id="@+id/textViewChannelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_4sdp"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Show Title"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textViewShowTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_toStartOf="@+id/textViewShowDuration"
                        android:layout_toEndOf="@+id/textViewChannelName"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingVertical="@dimen/_4sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_11ssp" />


                    <TextView
                        android:id="@+id/textViewShowDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:visibility="gone"
                        android:includeFontPadding="false"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="00:00 - 00:00"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_11ssp" />

                    <SeekBar
                        android:id="@+id/seek_bar"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textViewChannelName"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/rubik_italic"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="(Information from tv guide about program being shown)"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_11ssp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>