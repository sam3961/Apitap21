<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/header"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/linearLayoutBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/back_green" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="40dp"
            android:layout_weight=".34"
            android:gravity="center"
            android:padding="5dp">

            <com.apitap.model.customclasses.ScaleImageView
                android:id="@+id/adstoreImg"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/loading" />

        </LinearLayout>

        <TextView
            android:id="@+id/storeName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:drawableLeft="@drawable/ic_icon_fav_gray"
            android:drawablePadding="@dimen/_4sdp"
            android:drawableTint="@color/colorGreenLogo"
            android:gravity="center"
            android:maxLines="2"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="4dp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingBottom="4dp"
            android:text=""
            android:textColor="@color/colorBlue"
            android:textSize="13sp"
            android:textStyle="bold"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".36"
            android:id="@+id/linearLayoutStoreDetails"
            android:gravity="center">

            <Button
                android:id="@+id/details_store"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@drawable/rounded_less_bg_blue"
                android:gravity="center"
                android:padding="2dp"
                android:text="Store Info"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/message_store"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:background="@drawable/back_round_blue_border"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat_icon"
                android:tint="@color/colorGreenLogo"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
