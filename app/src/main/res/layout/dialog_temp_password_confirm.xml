<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGreylight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlToolbar"
        android:padding="@dimen/_1sdp"
        android:background="@drawable/back_white_border_grey"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/apitap_header_logo" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_below="@+id/rlToolbar"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are logged in currently with temporary password. Do you want to create a new password?"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/rubik_regular"
            android:textColor="@color/colorBlue" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/text">


            <Button
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/buttonYes"
                android:textColor="@android:color/white"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Yes"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_toStartOf="@+id/buttonNo"
                android:background="@drawable/rounded_bg_dblue"
                />

            <Button
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonNo"
                android:textColor="@android:color/white"
                android:text="No"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:background="@drawable/rounded_bg_dblue"
                />
        </RelativeLayout>



</RelativeLayout></RelativeLayout>