<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewAdTitle"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AdName"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:gravity="start"
                    android:textColor="@color/colorBlack" />



                <TextView
                    android:id="@+id/textViewStoreName"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:text="Ad Store"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textViewAdTitle"
                    android:gravity="end"
                    android:textColor="@color/colorBlack" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.apitap.model.customclasses.CustomImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:src="@drawable/ic_icon_loading"
                    android:visibility="visible" />

                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlack"
                    app:use_controller="false"
                    android:visibility="gone" />

                <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="60dp"
                    android:visibility="gone"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    app:mlpb_progress_stoke_width="4dp"
                    app:mlpb_progress_color="@color/colorGreenLogo"/>





                <ImageView
                    android:id="@+id/seen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/green_seen" />

                <ImageView
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_icon_play"
                    android:visibility="gone" />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>