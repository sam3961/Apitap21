<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey">


        <LinearLayout
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@drawable/rounded_right_blue"
                android:paddingStart="@dimen/dp_eight"
                android:id="@+id/homeTab2"
                android:paddingEnd="@dimen/_12sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_gravity="center"
                    android:layout_height="24dp"
                    android:id="@+id/tab_one_image"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/ic_baseline_home_24"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_gravity="center"
                    android:layout_height="24dp"
                    android:id="@+id/sear"
                    android:padding="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_icon_search"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textColor="@color/colorGrey1"
                    android:paddingEnd="@dimen/dp_eight"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/dp_eight"
                    android:layout_marginTop="@dimen/dp_one"
                    android:text="@string/home"/>

            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="bottom"
                android:background="@color/colorWhite"
                app:tabGravity="center"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabIndicatorHeight="5dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/colorBlue"
                app:tabTextColor="@color/colorWhite" />


        </LinearLayout>

        <FrameLayout
            android:id="@+id/container_body2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_container"
            android:layout_marginTop="5dp"
            android:visibility="gone"></FrameLayout>

        <FrameLayout
            android:id="@+id/backff"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tab_container"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kjjkklk"
                android:visibility="invisible" />
        </FrameLayout>


        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tab_container"
            android:layout_marginTop="5dp"
            android:scrollbarSize="10dp"
            android:scrollbarThumbVertical="@drawable/custom_scroll_style"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/mainview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tab_container"
                android:background="@color/colorGrey"
                android:orientation="vertical"
                android:visibility="visible"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            style="@style/Base.TextAppearance.AppCompat.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Search Results"
                            android:textColor="@color/colorBlue"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/location_key"
                            style="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="5dp"
                            android:gravity="end"
                            android:text="Location:"
                            android:textColor="@color/colorBlue" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ic_back"
                            style="@android:style/TextAppearance.Small"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:text="Back"
                            android:textColor="@color/colorBlue" />


                        <TextView
                            android:id="@+id/searched_key"
                            style="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="5dp"
                            android:gravity="end"
                            android:text="Searched For:"
                            android:textColor="@color/colorBlue" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ad_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/rls"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <com.apitap.model.ViewPagerCustomDuration
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <me.relex.circleindicator.CircleIndicator
                            android:id="@+id/indicator_default"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="8dp"
                            android:gravity="bottom" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/no_Ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:text="No Ads Found"
                        android:textColor="@color/colorBlue"
                        android:textSize="22dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noItemll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:text="No Product Found"
                        android:textColor="@color/colorBlue"
                        android:textSize="22dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".15"
                        android:gravity="top"
                        android:text="Products"
                        android:textColor="@color/colorBlue" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight=".85"
                        android:background="@color/colorWhite" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noSpecial_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:text="No Special Found"
                        android:textColor="@color/colorBlue"
                        android:textSize="22dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="top"
                        android:layout_marginTop="5dp"
                        android:layout_weight=".15"
                        android:gravity="top"
                        android:text="Promotions"
                        android:textColor="@color/colorBlue" />

                    <HorizontalScrollView
                        android:id="@+id/scroll_view_items"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".85"
                        android:scrollbars="none">

                        <com.linearlistview.LinearListView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/list2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:dividerPadding="2dp"
                            android:orientation="horizontal"
                            android:showDividers="none|middle|beginning|end"
                            app:dividerThickness="2dp" />
                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:gravity="end|bottom"
                    android:visibility="visible">


                    <Button
                        android:id="@+id/cancelbtn"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/back_blue_border_blue_"
                        android:text="Cancel"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" />

                    <Button
                        android:id="@+id/searchAgain"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/back_blue_border_blue_"
                        android:padding="10dp"
                        android:text="Search Again"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.apitap.views.NavigationMenu.FragmentDrawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>