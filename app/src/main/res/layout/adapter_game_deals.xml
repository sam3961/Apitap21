<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/parentCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:background="#ffffff"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/mainpic"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".75">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/imageViewItem"
                        android:layout_width="110dp"
                        android:layout_height="120dp"
                        android:src="@drawable/test"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:adjustViewBounds="true" />

                    <ImageView
                        android:id="@+id/eye"
                        android:layout_width="15dp"
                        android:layout_marginTop="@dimen/dp_6"
                        android:visibility="gone"
                        android:layout_marginStart="2dp"
                        android:layout_height="10dp"
                        android:background="@drawable/grey_seen" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".13"
                android:gravity="bottom">


                <TextView
                    android:id="@+id/textViewItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:text="Title of Item 1"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/rubik_regular"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".13"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/rel_single_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/actual_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="2dp"
                        android:includeFontPadding="false"
                        android:text="$15.99"
                        android:fontFamily="@font/rubik_medium"
                        android:singleLine="true"
                        android:textColor="@color/simple_grey"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_two_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/price_after_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="$12.00"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/rubik_medium"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:id="@+id/view_all"
        android:visibility="gone"
        android:padding="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/view_all_button" />
    </LinearLayout>

</LinearLayout>



