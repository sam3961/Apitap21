<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="1">



        <CheckBox
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/custom_radiobutton"
            android:button="@android:color/transparent"
            android:id="@+id/checkimg"
            />

        <ImageView
            android:id="@+id/img"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.2"
            android:padding="5dp"
            android:src="@drawable/demo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:singleLine="true"
                android:textColor="@color/colorBlue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:visibility="invisible"
                android:id="@+id/opy1layout">

                <TextView
                    android:id="@+id/tv_option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option1:"
                    android:layout_toLeftOf="@+id/option1_price"
                    android:singleLine="true"
                    android:textColor="@color/colorBlue" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="N/A"
                    android:id="@+id/option1_price"
                    android:textColor="@color/colorBlue" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/opy2layout"
                android:visibility="invisible"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option2:"
                    android:layout_toLeftOf="@+id/option2_price"
                    android:singleLine="true"
                    android:textColor="@color/colorBlue" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="N/A"
                    android:id="@+id/option2_price"
                    android:textColor="@color/colorBlue" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="cvv"
            android:textColor="@color/colorBlue" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".2"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:text="cvv"
            android:textColor="@color/colorBlue" />
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_gravity="bottom|center"
        android:layout_height="24dp"
        android:id="@+id/more_info"
        android:src="@drawable/ic_icon_info"/>
</LinearLayout>