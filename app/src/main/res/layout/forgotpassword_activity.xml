<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/rootLayout">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ll_shopping"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/toolBar_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardElevation="7dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="2dp"
            card_view:cardBackgroundColor="@color/colorGreenLogo"
            card_view:contentPadding="5dp">

            <LinearLayout
                android:layout_width="100dp"
                android:id="@+id/back_ll"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/back_green" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/forgot_password"
                android:id="@+id/titleName"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/rubik_medium"
                 />
        </androidx.cardview.widget.CardView>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@+id/ll_shopping"
        android:layout_centerInParent="true"
        android:src="@drawable/apitap_splash_logo" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewLogo"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="30dp"
        android:inputType="textEmailAddress"
        android:hint="@string/enter_email" />


    <RelativeLayout
        android:id="@+id/forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_below="@+id/editEmail"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:background="@drawable/rounded_bg_dblue"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/reset"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>


</RelativeLayout>