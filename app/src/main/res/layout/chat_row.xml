<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:emojicon="http://schemas.android.com/tools"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".98">

            <LinearLayout
                android:id="@+id/mymsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_marginEnd="5dp"
                        android:layout_toLeftOf="@+id/txt_time"
                        android:gravity="end"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/txt_time"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_marginEnd="20dp"
                        android:layout_toLeftOf="@+id/you"
                        android:gravity="end"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/you"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp"
                        android:gravity="top|end"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/txt_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="all"
                        android:text="hi &#128522;"
                        android:linksClickable="true"
                        android:textColorLink="@color/header_blue"
                        android:background="@drawable/rounded_bg_red"
                        android:padding="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="17dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:id="@+id/senderViewImagesRoot"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView1Sender"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_margin="@dimen/dp_eight"
                        android:layout_weight=".33"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/dp_eight">

                        <ImageView
                            android:id="@+id/imageView1Sender"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gallery_placeholder" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2Sender"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_margin="@dimen/dp_eight"
                        android:layout_weight=".33"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/dp_eight">

                        <ImageView
                            android:id="@+id/imageView2Sender"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gallery_placeholder" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3Sender"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_margin="@dimen/dp_eight"
                        android:layout_weight=".33"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/dp_eight">

                        <ImageView
                            android:id="@+id/imageView3Sender"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gallery_placeholder" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:layout_weight=".02"
            android:background="@color/colorBlue"
            android:paddingLeft="2dp"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="You"
                    android:textColor="@color/colorBlue" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/replysent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight=".6"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:layout_weight=".02"
            android:background="@color/colorGreen"
            android:paddingRight="2dp"></LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".98"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/img_main"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:src="@drawable/demo"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/store_name"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="2dp"
                        android:gravity="top|start"
                        android:text="Fashio Victim"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txt_date_merchant"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/store_name"
                        android:gravity="end"
                        android:text="08/24/17"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txt_time_merchant"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/txt_date_merchant"
                        android:text="12:43 pm"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="60dp"
                    android:gravity="center_vertical"
                    android:padding="5dp">

                    <TextView
                        android:autoLink="all"
                        android:linksClickable="true"
                        android:textColorLink="@color/header_blue"
                        android:id="@+id/sending"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_gravity="end"
                        android:background="@drawable/back_round_green_border"
                        android:padding="10dp"
                        android:text="Hello  i am good "
                        android:textColor="@color/colorBlack"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/receiverViewImagesRoot"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView1Receiver"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_margin="@dimen/dp_eight"
                        android:layout_weight=".33"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/dp_eight">

                        <ImageView
                            android:id="@+id/imageView1Receiver"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gallery_placeholder" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2Receiver"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_margin="@dimen/dp_eight"
                        android:layout_weight=".33"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/dp_eight">

                        <ImageView
                            android:id="@+id/imageView2Receiver"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gallery_placeholder" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3Receiver"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_margin="@dimen/dp_eight"
                        android:layout_weight=".33"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/dp_eight">

                        <ImageView
                            android:id="@+id/imageView3Receiver"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gallery_placeholder" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:gravity="center"
                android:visibility="gone">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grey_seen" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

