<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/tab_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="bottom"
                android:background="@color/colorWhite"
                app:tabGravity="center"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabIndicatorHeight="5dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/colorBlue"
                app:tabTextColor="@color/colorWhite" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/container_body"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:layout_height="match_parent">

        </FrameLayout>
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:background="@color/colorGrey"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center">

                <TextView
                    android:id="@+id/storeName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:drawableTint="@color/colorGreenLogo"
                    android:background="@drawable/back_round_blue_border"
                    android:drawableLeft="@drawable/ic_icon_fav_gray"
                    android:drawablePadding="-0.5dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="2.5dp"
                    android:text="Store Name"
                    android:textColor="@color/colorBlue"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center"
                android:padding="5dp">


                <ImageView
                    android:id="@+id/adstoreImg"
                    android:layout_width="152dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:src="@drawable/loading" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center">

                <Button
                    android:id="@+id/details_store"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_bg_dblue"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="View This Store's Info"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="10dp"
            android:scrollbarThumbVertical="@drawable/custom_scroll_style"
            android:layout_marginTop="3dp"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/linear"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="3dp"
                    android:id="@+id/card1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left">
                        <ImageView
                            android:id="@+id/tv_back"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:paddingEnd="20dp"
                            android:src="@drawable/back_arrow_text" />

                        <TextView
                            android:id="@+id/txt_cartId"
                            style="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/tv_back"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:text="Shopping Cart ID:XXXXX"
                            android:textColor="@color/colorBlue"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_status"
                            style="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: Checkout"
                            android:layout_below="@+id/txt_cartId"
                            android:textColor="@color/colorBlue"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_auth"
                            style="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auth.: Approved"
                            android:visibility="gone"
                            android:layout_below="@+id/txt_cartId"
                            android:textColor="@color/colorBlue"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/approval"
                            style="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Approval No.:N/A"
                            android:visibility="gone"
                            android:layout_below="@+id/tv_auth"
                            android:textColor="@color/colorBlue"
                            android:textStyle="bold" />



                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:paddingEnd="20dp"
                            android:id="@+id/back_img"
                            android:visibility="invisible"
                            android:src="@drawable/back_arrow_text" />

                        <TextView
                            android:id="@+id/txt_date"
                            style="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/back_img"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:text="Date: Dec. 29,20177"
                            android:textColor="@color/colorBlue"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/time"
                            style="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time: 03:36pm"
                            android:layout_below="@+id/txt_date"
                            android:textColor="@color/colorBlue"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Large"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".70"
                        android:text="Checkout"
                        android:textColor="@color/colorBlue"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/logocmp"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:layout_weight=".10"
                        android:src="@drawable/loading" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight=".40"
                        android:text="ITEM(S)"
                        android:textColor="@color/colorBlue" />

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".10"
                        android:gravity="end"
                        android:text="QTY"
                        android:textColor="@color/colorBlue" />

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".10"
                        android:gravity="end"
                        android:text="PRICE"
                        android:singleLine="true"
                        android:textColor="@color/colorBlue" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:scrollbarSize="10dp"
                        android:scrollbarThumbVertical="@drawable/custom_scroll_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />

                    <com.github.rahatarmanahmed.cpv.CircularProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/pocket"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:cpv_animAutostart="true"
                        app:cpv_indeterminate="true" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:id="@+id/card3"
                    android:padding="2dp"
                    android:layout_below="@+id/recycler_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <Button
                            android:id="@+id/save_later"
                            android:layout_width="92dp"
                            android:layout_height="30dp"
                            android:textSize="10sp"
                            android:layout_margin="3dp"
                            android:paddingStart="1dp"
                            android:paddingEnd="1dp"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:background="@drawable/back_round_blue_border"
                            android:gravity="center"
                            android:text="Save for Later"
                            android:textColor="@color/dark_blue" />

                        <Button
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:id="@+id/remove"
                            android:layout_margin="3dp"
                            android:background="@drawable/back_round_blue_border"
                            android:gravity="center"
                            android:text="Delete"
                            android:textColor="@color/dark_blue" />

                        <Button
                            android:id="@+id/edit"
                            android:layout_width="80dp"
                            android:layout_margin="3dp"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:layout_height="30dp"
                            android:background="@drawable/back_round_blue_border"
                            android:gravity="center"
                            android:text="Edit "
                            android:textColor="@color/dark_blue" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            >
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="SUBTOTAL"
                                android:textStyle="bold"
                                android:textSize="10.5sp"
                                android:textColor="@color/colorBlue" />
                            <LinearLayout
                                android:id="@+id/dollar"
                                android:layout_width="80dp"
                                android:layout_height="20dp"
                                android:orientation="horizontal"
                                android:background="@drawable/new_btn_history_design"
                                android:gravity="center"
                                android:textColor="@color/colorBlack" >

                                <TextView
                                    android:id="@+id/sub_total"
                                    style="@style/Base.TextAppearance.AppCompat.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="$ 00.00"
                                    android:textColor="@color/colorBlack" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:gravity="center">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight=".20"
                        android:background="@color/colorBlue"
                        android:gravity="center"
                        android:text="Remove"
                        android:textColor="@color/colorWhite" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.080"></LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight=".20"
                        android:background="@color/colorBlue"
                        android:gravity="center"
                        android:text="Edit"
                        android:textColor="@color/colorWhite" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".2"></LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="Delivery Address"
                        android:textColor="@color/colorBlue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/back_round_blue_border"
                        android:orientation="horizontal"
                        android:paddingEnd="5dp">

                        <Spinner
                            android:id="@+id/shipping"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.80"
                            android:background="@null"
                            android:dropDownVerticalOffset="40dp"
                            android:gravity="center_vertical"
                            android:spinnerMode="dropdown"
                            android:text="Select Address"
                            android:textColor="#617291" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="0.20"
                            android:src="@drawable/down_arrow" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="bottom"
                        android:text="Delivery Method"
                        android:textColor="@color/colorBlue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/back_round_blue_border"
                        android:orientation="horizontal"
                        android:paddingEnd="5dp">

                        <Spinner
                            android:id="@+id/delivery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.80"
                            android:background="@null"
                            android:dropDownVerticalOffset="40dp"
                            android:overlapAnchor="false"
                            android:gravity="center_vertical"
                            android:spinnerMode="dropdown"
                            android:text="Select Address"

                            android:textColor="#617291" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="0.20"
                            android:src="@drawable/down_arrow" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorBlue"
                    android:gravity="center|start"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/delivery_cost"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".30"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dp"
                        android:singleLine="true"
                        android:text="Delivery :$ 0.00"
                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/taxtv"
                        android:paddingLeft="2dp"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="0dp"
                        android:layout_weight=".24"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:text="Tax: $10.00"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/tip"
                        android:paddingLeft="2dp"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="0dp"
                        android:layout_weight=".19"
                        android:layout_height="match_parent"
                        android:text="Add Tip"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:visibility="gone"
                        android:gravity="center"
                        android:background="@drawable/bg_blue"
                        android:textSize="12dp"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/total"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".27"
                        android:text="Total:$ "
                        android:gravity="end"
                        android:textSize="12dp"
                        android:visibility="visible"
                        android:layout_marginEnd="4dp"
                        android:paddingEnd="2dp"
                        android:paddingLeft="2dp"
                        android:textColor="@color/colorWhite" />



                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="Payment Method"
                    android:textColor="@color/colorBlue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/back_round_blue_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingEnd="5dp">

                    <Spinner
                        android:id="@+id/payment_method"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_weight="0.80"
                        android:background="@null"
                        android:dropDownVerticalOffset="40dp"
                        android:gravity="center_vertical"
                        android:spinnerMode="dropdown"
                        android:text="Select Payment"
                        android:textColor="#617291" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="0.20"
                        android:src="@drawable/down_arrow" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="3dp"
                    android:text="Delivery Instructions"
                    android:textColor="@color/colorBlue" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/back_round_blue_border"
                    android:hint="Enter any special instructions for your overall delivery"
                    android:paddingEnd="5dp"
                    android:paddingTop="5dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:id="@+id/specialInstructions"
                    android:gravity="center|top|start"
                    android:paddingStart="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorDarkGrey" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:gravity="bottom">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_gravity="bottom"
                        android:layout_weight=".3"
                        android:gravity="end|bottom">

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/back_round_blue_border"
                            android:text="Purchase"
                            android:textColor="@color/colorBlue" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.apitap.views.NavigationMenu.FragmentDrawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>